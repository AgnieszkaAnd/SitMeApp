
@{
    ViewData["Title"] = "Register";
}

<div class="logo_img">
    <img class="tlo" src="~/images/restaurant_pictures/registration.png" />
</div>

<div class="login_box">
    <h2>Create your SitMe account</h2><br>

    <input type="text" name="username" placeholder="Username"> <br>
    <input type="text" name="email" placeholder="E-mail"><br>
    <input type="text" name="password" placeholder="Password"><br>
    <input type="text" name="password2" placeholder="Retype password"><br>
    <br>
    <input type="submit" name="signup_submit" value="Create my account" /><br>
    <br>
    By clicking Create account  you accept SitMe's Terms & Conditions, Privacy Policy, Cookies Policy and marketing communications.
</div>

